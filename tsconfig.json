{
  "compileOnSave": false,
//   "compilerOptions": {
//     "target": "es5",
//     "module": "commonjs",
//     "outDir": "out",
//     "sourceMap": true
//   }
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    // "module": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],

    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}

